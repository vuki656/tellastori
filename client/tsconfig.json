{
    "compilerOptions": {
        "target": "ES2019",
        "lib": [
            "ES2019",
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "next-env.d.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
